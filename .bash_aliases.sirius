go(){
   case $1 in
      ag)   cd /opt/jboss/server/agence/deploy     ;;
      bo)   cd /opt/jboss/server/default/deploy    ;;
      *) echo "usage: go [ ag | bo ]"               ;;
   esac
}

gologs() {
  case $1 in
    ag) cd /var/log/ola/agence          ;;
    bo) cd /var/log/ola/backoffice      ;;
    *) echo "usage: logs [ ag | bo ]"   ;;
  esac
}

startbo() {
  unset DISPLAY;
  sudo /etc/init.d/backoffice start
  if ask "Voir les logs demarrage ? "
    then tail -f /var/log/ola/backoffice/stdout
  fi
}

stopbo() {
  sudo /etc/init.d/backoffice stop
}

